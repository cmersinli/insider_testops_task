FROM python:3.12-slim AS builder

WORKDIR /build

COPY tests/requirements.txt .

RUN pip install --no-cache-dir --user -r requirements.txt


FROM python:3.12-slim

LABEL maintainer="Çağlar MERSİNLİ" \
    description="Test Controller Pod - pytest runner with Remote WebDriver" \
    version="2.0.0"

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PATH="/home/controller/.local/bin:$PATH" \
    REMOTE_URL="http://chrome-node:4444" \
    HEADLESS=true

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

RUN useradd -m -u 1000 -s /bin/bash controller

WORKDIR /app

COPY --from=builder /root/.local /home/controller/.local

COPY --chown=controller:controller tests/ ./tests/

RUN chown -R controller:controller /home/controller/.local

USER controller

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import pytest; print('healthy')" || exit 1

CMD ["pytest", "tests/", "-v", "--tb=short"]
